extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        
        h1= `${project.project_name}`
        
        p= `Description: ${project.description}`

      .project-tech-links-box.box
        h6 Technologies
        
        ul
          each technology in project.technologies
             li= technology
         
        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

    .project-img-box.box

      //- Replace the URLs in the src attributes below with interpolated template literals to dynamically add your project images, and add descriptions to the alt attributes
      img.project-img(src=`${project.image_urls[0]}`, alt='Screenshot of a web browser')
      img.project-img(src=`${project.image_urls[1]}`, alt='Screenshot of a web browser')
      img.project-img(src=`${project.image_urls[2]}`, alt='Screenshot of a web browser')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
